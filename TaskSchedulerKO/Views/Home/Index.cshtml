@{
    ViewBag.Title = "Task Organiser";
}

@section scripts{
    <script src="~/Scripts/knockout-3.5.0.js"></script>
    <script src="~/Scripts/main.js"></script>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
}

<div id="main-content" class="row">
    <br />
    <table style="width: 100%">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Done</th>
            <th></th>
        </tr>

        <!--ko foreach: itemList-->
        <tr class="alert" data-bind="css: { 'alert-success': Completed(), 'alert-info': !Completed()}" style="padding: 50px;">
            <td data-bind="text: Name"></td>
            <td data-bind="text: Description"></td>
            <td><input type="checkbox" name="taskcomplete" data-bind="checked: Completed"></td>
            <td><div class="btn btn-danger pull-right" data-bind="click: $root.delete.bind()">X</div></td>
        </tr>
        <!--/ko-->
        <tr>
            <td><input id="name" placeholder="Insert task name..." /></td>
            <td><input id="desc" placeholder="Insert task description..." /></td>
            <td></td>
            <td><div class="btn btn-success pull-right" data-bind="click: $root.addItem.bind()">Add Row</div></td>
        </tr>
    </table>
</div>
